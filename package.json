{
  "name": "@arach/speakeasy",
  "version": "0.2.4",
  "description": "SpeakEasy - Unified text-to-speech service with provider abstraction",
  "private": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/bin/speakeasy-cli.ts --dts --format cjs",
    "dev": "tsc --watch",
    "test": "node dist/test.js",
    "example": "npm run build && node examples/basic-usage.js",
    "cli": "npm run build && node dist/bin/speakeasy-cli.js"
  },
  "bin": {
    "speakeasy": "dist/bin/speakeasy-cli.js"
  },
  "keywords": [
    "tts",
    "speech",
    "text-to-speech",
    "openai",
    "elevenlabs",
    "groq",
    "macos",
    "cache",
    "cli"
  ],
  "author": "arach",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.72",
    "@google/generative-ai": "^0.24.1",
    "@types/uuid": "^10.0.0",
    "better-sqlite3": "^12.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "keyv": "^5.3.4",
    "node-fetch": "^3.3.2",
    "uuid": "^11.1.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "playwright": "^1.54.2",
    "tsup": "^7.0.0",
    "typescript": "^5.0.0"
  }
}
